import("//build/rust/rustc_binary.gni")
import("//build/package.gni")

rustc_binary("bin") {
  name = "bt_cli"

  deps = [
    "//garnet/lib/rust/crates/fuchsia-bluetooth",
    "//garnet/public/lib/bluetooth/fidl/common:common-rustc",
    "//garnet/public/lib/bluetooth/fidl/control:control-rustc",
    "//garnet/public/lib/bluetooth/fidl/gatt:gatt-rustc",
    "//garnet/public/lib/bluetooth/fidl/le:le-rustc",
    "//garnet/public/lib/fidl/rust/fidl",
    "//garnet/public/rust/crates/fuchsia-app",
    "//garnet/public/rust/crates/fuchsia-async",
    "//garnet/public/rust/crates/fuchsia-zircon",
    "//third_party/rust-crates/rustc_deps:failure",
    "//third_party/rust-crates/rustc_deps:futures",
    "//third_party/rust-crates/rustc_deps:log",
    "//third_party/rust-crates/rustc_deps:parking_lot",
    "//third_party/rust-mirrors/rustyline",
  ]
}

package("bt-cli") {
  deps = [
    ":bin",
  ]

  binary = "rust_crates/bt_cli"

  meta = [
    {
      path = rebase_path("meta/sandbox")
      dest = "sandbox"
    },
  ]
}
