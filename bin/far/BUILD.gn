import("//build/cpp/sdk_executable.gni")
import("//build/host.gni")
import("//build/package.gni")

sdk_executable("bin") {
  output_name = "far"

  sources = [
    "main.cc",
  ]

  deps = [
    "//garnet/lib/far",
    "//garnet/public/lib/fxl",
  ]
}

package("far") {
  deprecated_system_image = true

  deps = [
    ":bin",
  ]

  binaries = [
    { name = "far" },
  ]
}

install_host_tools("host") {
  deps = [
    ":bin",
  ]
  outputs = [
    "far",
  ]
}
