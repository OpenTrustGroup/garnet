import("//build/package.gni")

source_set("lib") {
  visibility = [ ":*" ]

  sources = [
    "kernel.cc",
    "kernel.h",
    "guest_config.cc",
    "guest_config.h",
    "guest_view.cc",
    "guest_view.h",
    "linux.cc",
    "linux.h",
    "zircon.cc",
    "zircon.h",
  ]

  public_deps = [
    "//garnet/lib/machina",
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/ui/view_framework:view_provider",
    "//third_party/rapidjson",
    "//zircon/public/lib/fbl",
    "//zircon/third_party/lib/fdt",
  ]

  defines = [ "_ALL_SOURCE=1" ]
}

executable("bin") {
  output_name = "guest"

  sources = [
    "main.cc",
  ]

  deps = [
    ":lib",
  ]

  defines = [ "_ALL_SOURCE=1" ]
}

executable("guest_unittests") {
  visibility = [ ":*" ]
  testonly = true

  sources = [
    "guest_config-unittest.cc",
    "run_all_unittests.cc",
  ]

  deps = [
    ":lib",
    "//third_party/googletest:gtest",
    "//zircon/public/lib/fbl",
  ]
}

package("guest_tests") {
  testonly = true
  system_image = true

  deps = [
    ":guest_unittests",
  ]

  tests = [
    {
      name = "guest_unittests"
    },
  ]
}
