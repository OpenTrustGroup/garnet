import("//build/fidl/fidl.gni")
import("//build/package.gni")

source_set("lib") {
  sources = [
    "message_reader.h",
    "gz_ipc_agent.cc",
    "gz_ipc_agent.h",
    "gz_ipc_msg.h",
    "gz_ipc_endpoint.cc",
    "gz_ipc_endpoint.h",
    "ree_agent.cc",
    "ree_agent.h",
    "ta_service.h",
    "tipc_agent.cc",
    "tipc_agent.h",
    "tipc_msg.h",
  ]

  public_deps = [
    "//garnet/lib/magma/src/magma_util:system",
    "//garnet/public/lib/gzos/trusty_ipc/cpp",
    "//garnet/public/fidl/gzos.reeagent",
    "//garnet/public/lib/svc/cpp",
    "//garnet/public/lib/fsl",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/async-loop-cpp",
  ]

  defines = [ "_ALL_SOURCE=1" ]
}

source_set("gz_ipc_client") {
  sources = [
    "gz_ipc_client.cc",
    "gz_ipc_client.h",
  ]

  public_deps = [
    ":lib",
  ]
}

source_set("gz_ipc_server") {
  sources = [
    "ree_message_impl.cc",
    "ree_message_impl.h",
    "gz_ipc_server.cc",
    "gz_ipc_server.h",
  ]

  public_deps = [
    ":lib",
  ]
}

source_set("test") {
  testonly = true

  sources = [
    "ree_message-unittest.cc",
    "tipc_agent_unittest.cc",
    "gz_ipc_agent-unittest.cc",
  ]

  deps = [
    ":gz_ipc_server",
    ":gz_ipc_client",
    "//zircon/public/lib/gzos-utils",
  ]

  public_deps = [
    "//garnet/public/fidl/gzos.ipc.test",
    "//third_party/googletest:gtest",
    "//zircon/public/lib/fs",
  ]
}

executable("ree_agent_unittests") {
  testonly = true

  sources = [
    "run_all_unittests.cc",
  ]

  deps = [
    ":test",
  ]
}

package("ree_agent_tests") {
  testonly = true
  deprecated_system_image = true

  deps = [
    ":ree_agent_unittests",
  ]

  tests = [
    {
      name = "ree_agent_unittests"
    },
  ]
}
