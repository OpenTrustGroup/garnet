import("//build/package.gni")
source_set("lib") {
  sources = [
    "port_manager.cc",
    "port_manager.h",
    "ree_agent.cc",
    "ree_agent.h",
  ]

  public_deps = [
    "//garnet/public/lib/ree_agent/cpp",
    "//garnet/public/lib/ree_agent/fidl",
    "//garnet/public/lib/svc/cpp",
  ]

  deps = [
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/async-loop-cpp",
  ]

  defines = [ "_ALL_SOURCE=1" ]
}

executable("ree_agent_unittests") {
  visibility = [ ":*" ]
  testonly = true

  sources = [
    "run_all_unittests.cc",
    "channel-unittest.cc",
    "port_manager-unittest.cc"
  ]

  deps = [
    ":lib",
    "//third_party/googletest:gtest",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/async-loop-cpp",
  ]
}

package("ree_agent_tests") {
  testonly = true
  deprecated_system_image = true

  deps = [
    ":ree_agent_unittests",
  ]

  tests = [
    {
      name = "ree_agent_unittests"
    },
  ]
}
