import("//build/package.gni")

executable("bin") {
  output_name = "listen"

  sources = [
    "listen.cc",
  ]

  deps = [
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/fxl",
    "//zircon/public/lib/fdio",
    "//zircon/public/lib/zx",
  ]
}

package("listen") {
  deps = [
    ":bin",
  ]

  binary = "listen"

  meta = [
    {
      path = rebase_path("meta/listen.cmx")
      dest = "listen.cmx"
    },
  ]
}
