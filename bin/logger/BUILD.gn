import("//build/rust/rust_binary.gni")
import("//build/package.gni")

rust_binary("bin") {
  name = "logger"

  deps = [
    "//garnet/public/rust/fidl_crates/garnet_public_lib_app_fidl",
    "//garnet/public/rust/fidl_crates/garnet_public_lib_logger_fidl",
  ]
}

executable("logger_integration_tests") {
  testonly = true

  sources = [
    "test/logger_tests.cc",
    "test/run_all_tests.cc",
  ]
  deps = [
    "//third_party/gtest",
    "//zircon/public/lib/syslog",
  ]
}

package("logger") {
  deps = [
    ":bin",
  ]

  binary = "logger"

  meta = [{
    path = rebase_path("//garnet/bin/appmgr/legacy_flat_exported_dir")
    dest = "legacy_flat_exported_dir"
  }]
}

package("logger_tests") {
  system_image = true
  testonly = true

  deps = [
    ":bin",
  ]
}
