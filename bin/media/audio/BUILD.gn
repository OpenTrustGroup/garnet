import("//build/test.gni")

source_set("audio") {
  sources = [
    "driver_utils.cc",
    "driver_utils.h",
    "gain.cc",
    "gain.h",
    "level.cc",
    "level.h",
    "lpcm_reformatter.cc",
    "lpcm_reformatter.h",
    "lpcm_util.cc",
    "lpcm_util.h",
    "mixdown_table.h",
    "mixer.h",
    "mixer_input.h",
    "mixer_input_impl.cc",
    "mixer_input_impl.h",
    "resampler.cc",
    "resampler.h",
  ]

  public_deps = [
    "//garnet/public/lib/fxl",
  ]

  deps = [
    "//garnet/bin/media/framework",
    "//garnet/bin/media/util",
    "//garnet/public/lib/media/timeline",
    "//zircon/public/lib/audio-proto-utils",
    "//zircon/public/lib/audio-utils",
  ]
}

test("tests") {
  output_name = "media_audio_tests"

  sources = [
    "test/level_test.cc",
    "test/mixdown_table_test.cc",
    "test/mixer_test.cc",
    "test/resampler_test.cc",
    "test/test_utils.cc",
    "test/test_utils.h",
  ]

  deps = [
    ":audio",
    "//garnet/bin/media/framework_create",
    "//garnet/public/lib/media/timeline",
    "//third_party/googletest:gtest_main",
  ]
}
