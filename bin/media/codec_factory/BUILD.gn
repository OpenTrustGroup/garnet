executable("codec_factory") {
  sources = [
    "codec_factory_app.cc",
    "codec_factory_app.h",
    "codec_factory_impl.cc",
    "codec_factory_impl.h",
    "main.cc",
  ]

  deps = [
    "//garnet/public/fidl/fuchsia.mediacodec",
    "//garnet/public/lib/component/cpp",
    "//garnet/public/lib/fsl",
    "//zircon/public/lib/async-loop-cpp",
    "//zircon/public/lib/trace-provider",
  ]

  # codec_factory spawns codec_runner_sw_omx(s) which is a peer package for now,
  # so no dep is needed here for codec_runner_sw_omx.
}
