import("//build/rust/rust_binary.gni")
import("//build/package.gni")

rust_binary("bin") {
  with_unit_tests = true

  name = "power_manager"
}

package("power_manager") {
  deps = [
    ":bin",
  ]

  binary = "power_manager"

  meta = [
    {
      path = rebase_path("meta/sandbox")
      dest = "sandbox"
    },
    {
      path = rebase_path("//garnet/bin/appmgr/legacy_flat_exported_dir")
      dest = "legacy_flat_exported_dir"
    },
  ]
}

package("power_manager_tests") {
  deprecated_system_image = true
  testonly = true

  deps = [
    ":bin",
  ]

  tests = [
    {
      name = "power_manager-bin-unit-test"
    },
  ]
}
