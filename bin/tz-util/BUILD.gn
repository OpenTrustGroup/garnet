import("//build/package.gni")

executable("bin") {
  output_name = "tz-util"

  sources = [
    "tz-util.cc",
  ]

  deps = [
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/fxl",
    "//garnet/public/lib/time_zone/fidl",
  ]
}

package("tz-util") {
  system_image = true
  deps = [
    ":bin",
  ]

  binaries = [ {
        name = "tz-util"
      } ]
}
