group("tests") {
  testonly = true

  public_deps = [
    ":apptests",
  ]
}

executable("apptests") {
  output_name = "gfx_apptests"

  testonly = true

  sources = [
    "gfx_apptest.cc",
    "gfx_test.cc",
    "gfx_test.h",
  ]

  deps = [
    "//garnet/bin/ui/tests:main",
    "//garnet/lib/ui/gfx/tests:testing_deps",
  ]
}
