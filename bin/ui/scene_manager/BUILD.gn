  output_name = "scene_manager"

  sources = [
    "main.cc",
    "scene_manager_app.cc",
    "scene_manager_app.h",
  ]

  deps = [
    ":common",
    "//garnet/examples/escher/common",
    "//zircon/public/lib/trace-provider",
  ]
}

