import("//build/go/go_binary.gni")
import("//build/host.gni")

go_binary("fidlgen") {
  gopackage = "fidl/compiler/backend"

  sdk_candidate = true

  go_dependencies = [
    {
      package = "fidl"
    },
  ]
}

install_host_tools("fidl") {
  deps = [
    ":fidlgen",
  ]
  outputs = [
    "fidlgen",
  ]
}
