import("//build/package.gni")

source_set("cmx") {
  sources = [
    "cmx.cc",
    "cmx.h",
    "facets.cc",
    "facets.h",
    "program.cc",
    "program.h",
    "runtime.cc",
    "runtime.h",
    "sandbox.cc",
    "sandbox.h",
  ]

  deps = [
    "//garnet/lib/json",
    "//garnet/public/lib/fxl",
    "//third_party/rapidjson",
    "//zircon/public/lib/fit",
  ]
}

executable("tests") {
  testonly = true

  output_name = "cmx_unittests"

  sources = [
    "cmx_unittest.cc",
    "facets_unittest.cc",
    "program_unittest.cc",
    "runtime_unittest.cc",
    "sandbox_unittest.cc",
  ]

  deps = [
    ":cmx",
    "//garnet/lib/json",
    "//garnet/public/lib/fxl/test:gtest_main",
    "//garnet/public/lib/gtest",
    "//third_party/googletest:gmock",
    "//third_party/rapidjson",
  ]
}

package("cmx_unittests") {
  testonly = true

  deps = [
    ":tests",
  ]
  tests = [
    {
      name = "cmx_unittests"
    },
  ]
}
