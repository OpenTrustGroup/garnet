import("//build/package.gni")

source_set("trusty_virtio") {
  sources = [
    "shared_mem.cc",
    "shared_mem.h",
    "trusty_virtio_device.cc",
    "trusty_virtio_device.h",
    "virtio_device.cc",
    "virtio_device.h",
    "virtio_queue.cc",
    "virtio_queue.h",
    "virtio_queue_waiter.cc",
    "virtio_queue_waiter.h",
  ]

  public_deps = [
    "//zircon/public/lib/async-cpp",
    "//zircon/public/lib/virtio",
    "//zircon/public/lib/zx",
    "//garnet/public/lib/fxl",
  ]

  defines = [ "_ALL_SOURCE=1" ]

  # TODO(ZX-1411): Add visibility annotations to code and remove this.
  configs -= [ "//build/config:symbol_visibility_hidden" ]
}

source_set("unittests") {
  testonly = true

  sources = [
    "remote_system_fake.cc",
    "remote_system_fake.h",
    "trusty_virtio_device-unittest.cc",
    "virtio_queue_fake.cc",
    "virtio_queue_fake.h"
  ]

  deps = [
    ":trusty_virtio",
    "//third_party/googletest:gtest",
    "//garnet/lib/magma/src/magma_util:system",
    "//zircon/public/lib/gzos-utils",
  ]

  public_deps = [
    "//zircon/public/lib/async-loop-cpp",
    "//zircon/public/lib/fbl",
  ]
}

