import("//garnet/lib/magma/gnbuild/magma.gni")

config("platform_include_config") {
  include_dirs = [ "." ]
}

config("tracing") {
  if (magma_enable_tracing) {
    defines = [ "MAGMA_ENABLE_TRACING" ]
  }
}

source_set("buffer") {
  public_configs = [ ":platform_include_config" ]

  public_deps = [
    ":handle",
    "$magma_build_root/src/magma_util",
  ]

  sources = [
    "platform_buffer.h",
    "platform_bus_mapper.h",
  ]

  deps = [
    "zircon:buffer",
  ]

  allow_circular_includes_from = [ "zircon:buffer" ]
}

source_set("handle") {
  public_configs = [ ":platform_include_config" ]

  public_deps = [
    "$magma_build_root/src/magma_util",
  ]

  sources = [
    "platform_handle.h",
  ]

  deps = [
    "zircon:handle",
  ]

  allow_circular_includes_from = [ "zircon:handle" ]
}

source_set("device") {
  public_configs = [ ":platform_include_config" ]

  public_deps = [
    ":handle",
    "$magma_build_root/src/magma_util",
  ]

  sources = [
    "platform_device.h",
    "platform_mmio.h",
    "platform_pci_device.h",
  ]

  deps = [
    "zircon:device",
  ]

  allow_circular_includes_from = [ "zircon:device" ]
}

source_set("random_header") {
  visibility = [ "./*" ]
  public_configs = [ ":platform_include_config" ]

  sources = [
    "platform_random.h",
  ]
}

group("random") {
  public_configs = [ ":platform_include_config" ]

  public_deps = [
    ":random_header",
  ]

  deps = [
    "zircon:random",
  ]
}

