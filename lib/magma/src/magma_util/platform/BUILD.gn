    ":event",
    ":object",
    ":semaphore",
    "$magma_build_root/src/magma_util",
    "//garnet/lib/magma/include:magma_abi",
    "//garnet/lib/magma/include:msd_abi",
  ]

  deps = [
    ":thread",
    "zircon:connection",
  ]

  allow_circular_includes_from = [ "zircon:connection" ]
