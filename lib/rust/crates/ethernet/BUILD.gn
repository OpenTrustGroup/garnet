import("//build/rust/rustc_library.gni")
import("//build/package.gni")

rustc_library("ethernet") {
  with_unit_tests = true
  edition = "2018"

  deps = [
    "//garnet/public/rust/crates/fdio",
    "//garnet/public/rust/crates/fuchsia-async",
    "//garnet/public/rust/crates/fuchsia-zircon",
    "//garnet/public/rust/crates/shared-buffer",
    "//third_party/rust-crates/rustc_deps:bitflags",
    "//third_party/rust-crates/rustc_deps:futures-preview",
  ]
}

package("ethernet-tests") {
  testonly = true

  deps = [
    ":ethernet"
  ]

  tests = [ { name = "ethernet_lib_test_rustc" } ]
}
