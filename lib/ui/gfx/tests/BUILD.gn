group("tests") {
  testonly = true

  public_deps = [
    ":apptests",
    ":unittests",
  ]
}

source_set("testing_deps") {
  testonly = true
  sources = [
    "mocks.cc",
    "mocks.h",
  ]
  public_deps = [
    ":util",
    "//garnet/lib/ui/gfx",
    "//garnet/public/lib/escher",
    "//garnet/public/lib/escher/test:gtest_vulkan",
    "//garnet/public/lib/gtest",
    "//garnet/public/lib/test_runner/cpp:gtest_main",
    "//garnet/public/lib/ui/scenic:fidl_helpers",
  ]
}

source_set("util") {
  sources = [
    "util.cc",
    "util.h",
  ]
  public_deps = [
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/fxl",
  ]
}

executable("unittests") {
  output_name = "gfx_unittests"

  testonly = true

  sources = [
    "escher_vulkan_smoke_test.cc",
    "event_timestamper_unittest.cc",
    "hittest_unittest.cc",
    "imagepipe_unittest.cc",
    "import_unittest.cc",
    "node_unittest.cc",
    "pose_buffer_unit_test.cc",
    "resource_linker_unittest.cc",
    "session_test.cc",
    "session_test.h",
    "session_unittest.cc",
    "shape_unittest.cc",
    "stereo_camera_unittest.cc",
    "vk_session_test.cc",
    "vk_session_test.h",
  ]

  deps = [
    ":testing_deps",
  ]

  include_dirs = [
    "//garnet/public/lib/escher",
    "//third_party/glm",
  ]
}

executable("apptests") {
  output_name = "gfx_apptests"

  testonly = true

  sources = [
    "gfx_apptest.cc",
    "gfx_test.h",
  ]

  deps = [
    ":testing_deps",
    "//garnet/lib/ui/scenic/tests:testing_deps",
  ]
}
