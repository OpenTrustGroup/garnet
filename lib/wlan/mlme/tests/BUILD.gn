  testonly = true
  deprecated_system_image = true

  deps = [
    ":tests",
    "//garnet/drivers/wlan/testing",
  ]

  binaries = [
    {
      name = "rust_crates/wlan_test_util"
      dest = "wlan-test-util"
    },
  ]

  tests = [
    {
      name = "wlan_client_unittest"
    },

    {
      name = "wlan_mac_unittest"
    },

    {
      name = "wlan_dispatcher_unittest"
