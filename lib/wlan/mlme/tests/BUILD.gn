import("//build/package.gni")

group("tests") {
  testonly = true
  public_deps = [
    ":client_tests",
    ":common_tests",
    ":dispatcher_tests",
    ":mac_tests",
    ":scanner_tests",
    ":service_tests",
    ":timer_manager_tests",
  ]
}

source_set("test_main") {
  testonly = true

  sources = [
    "mock_device.h",
    "test_bss.h",
    "test_bss.cpp",
    "test_data.h",
    "test_data.cpp",
    "test_main.cpp",
  ]

  public_deps = [
    "//garnet/lib/wlan/mlme",
  ]

  deps = [
    "//third_party/googletest:gtest",
  ]

  configs += [ "//garnet/lib/wlan/mlme:wlan_mlme_config" ]
}

executable("client_tests") {
  output_name = "wlan_client_unittest"

  testonly = true

  sources = [
    "client_unittest.cpp",
  ]

  deps = [
    ":test_main",
    "//garnet/lib/wlan/mlme",
    "//third_party/googletest:gtest",
  ]

  configs += [ "//garnet/lib/wlan/mlme:wlan_mlme_config" ]
  configs += [ "//build/config/fuchsia:enable_zircon_asserts" ]
}

executable("mac_tests") {
  output_name = "wlan_mac_unittest"

  testonly = true

  sources = [
