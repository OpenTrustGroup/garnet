library ree_agent;

enum MessageType {
  Tipc = 0;
  Gp = 1;
};

struct MessageChannelInfo {
  MessageType type;
  uint32 id;
  uint32 max_message_size;
  handle<channel> channel;
};

interface ReeMessage {
  // Add message channel(s)
  1: AddMessageChannel(vector<MessageChannelInfo> infos) -> (status err);

  // Start to service ree message channels
  2: Start(vector<uint32>? ids) -> (status err);

  // Stop to service ree message channels
  3: Stop(vector<uint32>? ids) -> (status err);
};
