import("//build/cpp/prebuilt_shared_library.gni")

source_set("sources") {
  sources = [
    "manifest.h",
    "manifest.cc",
    "trusty_ipc.h",
    "trusty_ipc.cc",
    "trusty_std.h",
    "trusty_syscalls.h",
    "trusty_unittest.h",
    "trusty_uuid.h",
  ]

  deps = [
    "//garnet/public/lib/app/cpp",
    "//third_party/rapidjson",
  ]

  public_deps = [
    "//garnet/public/lib/gzos/trusty_ipc/cpp",
  ]
}

source_set("share_headers") {
  sources = [
    "trusty_ipc.h",
  ]
}

source_set("unittests") {
  testonly = true
  sources = [
    "manifest_unittest.cc"
  ]

  deps = [
    ":sources",
    "//third_party/googletest:gtest",
  ]
}

prebuilt_shared_library("trusty_app") {
  category = "partner"
  no_headers = true

  public_deps = [
    ":sources"
  ]
}
