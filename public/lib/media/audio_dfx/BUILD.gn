import("//build/package.gni")
import("//build/test.gni")

# This DFX exists for test purposes, to validate the DFX interface.
loadable_module("audio_dfx") {
  testonly = true

  sources = [
    "audio_device_fx.h",
    "lib/dfx_base.cc",
    "lib/dfx_base.h",
    "lib/dfx_delay.cc",
    "lib/dfx_delay.h",
    "lib/dfx_rechannel.h",
    "lib/dfx_swap.h",
    "lib/lib_dfx.cc",
  ]

  deps = [
    "//garnet/public/lib/fxl",
    "//zircon/public/lib/fbl",
  ]
}

# This standalone test expects to find a libaudio_dfx.so in this package.
test("tests") {
  testonly = true
  output_name = "audio_dfx_tests"

  sources = [
    "audio_device_fx.h",
    "lib/dfx_base.h",
    "lib/dfx_delay.h",
    "lib/dfx_rechannel.h",
    "lib/dfx_swap.h",
    "test/audio_dfx_tests.cc",
  ]

  libs = [ "zircon" ]

  # We include mixer_lib to use its fx_loader, to directly test it and FX libs.
  deps = [
    "//garnet/bin/media/audio_core:audio_mixer_lib",
    "//garnet/public/lib/fxl",
    "//third_party/googletest:gtest_main",
  ]
}
