}

test("tests") {
  output_name = "media_lib_transport_tests"

  sources = [
    "test/shared_buffer_set_allocator_test.cc",
    "test/shared_buffer_set_test.cc",
  ]

  deps = [
    ":transport",
    "//garnet/public/lib/fsl",
    "//third_party/googletest:gtest_main",
  ]
}
