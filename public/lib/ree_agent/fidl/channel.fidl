library ree_agent;

struct SharedMessageItem {
  uint32 msg_id;
  handle<vmo> vmo;
};

[ServiceName="ree_agent::TipcChannel"]
interface TipcChannel {
  // Close the channel
  1: Close();

  // Request shared message items from peer
  2: RequestSharedMessageItems() -> (vector<SharedMessageItem> items);

  // Get a free message item from peer
  3: GetFreeMessageItem() -> (status s, uint32 msg_id);

  // Notify peer message item is filled
  4: NotifyMessageItemIsFilled(uint32 msg_id, uint64 msg_size) -> (status s);
};
