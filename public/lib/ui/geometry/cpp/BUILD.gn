  output_name = "geometry_util_unittests"

  testonly = true

  sources = [
    "tests/geometry_util_unittests.cc",
  ]

  deps = [
    ":cpp",
    "//garnet/bin/ui/tests:main",
    "//garnet/public/lib/ui/tests",
    "//third_party/googletest:gtest",
  ]
}
