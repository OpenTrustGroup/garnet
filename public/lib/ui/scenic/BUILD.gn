group("scenic") {
  deps = [
    ":client",
    ":fidl_helpers",
  ]
}

source_set("fidl_helpers") {
  sources = [
    "fidl_helpers.cc",
    "fidl_helpers.h",
  ]

  public_deps = [
    "//garnet/public/lib/ui/gfx/fidl",
    "//garnet/public/lib/ui/scenic/fidl",
  ]

  deps = [
    "//garnet/public/lib/fxl",
  ]
}

source_set("client") {
  sources = [
    "client/host_image_cycler.cc",
    "client/host_image_cycler.h",
    "client/host_memory.cc",
    "client/host_memory.h",
    "client/resources.cc",
    "client/resources.h",
    "client/session.cc",
    "client/session.h",
  ]

  public_deps = [
    ":fidl_helpers",
  ]

  deps = [
    "//garnet/public/lib/fxl",
  ]
}
